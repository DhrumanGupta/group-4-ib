// `yarn prisma generate` - update TypeScript definitions based on this schema
// `yarn prisma db push` - push the schema changes to the database

datasource db {
    provider = "mysql"
    url      = env("MYSQL_URL")
}

generator client {
  provider        = "prisma-client-js"
}

enum Role {
    ADMIN
    USER
}

model User {
    id                  String     @id @default(uuid())
    email               String     @unique(map: "User.email_unique")
    password            String
    name                String
    role                Role       @default(USER)
    packagesHeld        Package[]
}

model Package {
    id                  String      @id @default(uuid())
    deliveryLocation    String
    sanitized           Boolean     @default(false)
    warehouse           Warehouse?  @relation(fields: [currentLocation], references: [id])
    currentLocation     String?
    heldBy              User?       @relation(fields: [heldByName], references: [name])
    heldByName          String
}

model Warehouse {
    id                  String      @id @default(uuid())
    location            String
    packages            Package[]
}